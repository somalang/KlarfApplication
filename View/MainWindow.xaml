<Window x:Class="KlarfApplication.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:KlarfApplication.View"
        Title="WPF Klarf Review Tool"
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- 메뉴바 -->
        <Menu Grid.Row="0" Background="#FF2D2D30" Foreground="White">
            <MenuItem Header="File">
                <MenuItem Header="Open Klarf File..." />
                <MenuItem Header="Open Image Folder..." />
                <Separator/>
                <MenuItem Header="Exit" />
            </MenuItem>
        </Menu>

        <!-- 메인 컨텐츠 -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 좌상단: WaferMapViewer -->
            <views:WaferMapViewer Grid.Row="0" Grid.Column="0" />

            <!-- 우상단: DefectImageViewer -->
            <views:DefectImageViewer Grid.Row="0" Grid.Column="2" />

            <!-- 좌하단: FileListViewer -->
            <views:FileListViewer Grid.Row="2" Grid.Column="0" />

            <!-- 우하단: DefectInfoViewer -->
            <views:DefectInfoViewer Grid.Row="2" Grid.Column="2" />

            <!-- 분할선 -->
            <GridSplitter Grid.Row="0" Grid.Column="1"
                          Width="5" Background="#FF555555"
                          VerticalAlignment="Stretch" ShowsPreview="True"/>
            <GridSplitter Grid.Row="1" Grid.Column="0"
                          Height="5" Background="#FF555555"
                          HorizontalAlignment="Stretch" ShowsPreview="True"
                          Grid.ColumnSpan="3"/>
        </Grid>

        <!-- 상태바 -->
        <StatusBar Grid.Row="2" Background="#FF007ACC" Height="28">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="11"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding CurrentTime}" Foreground="White" FontSize="11"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
